											<%#= link_to (image_tag 'nav-menu/nav6.jpg' , :class => "img-responsive")+"About" ,  about_us_path %>
											 </li> -->
										</ul>
									</div><!-- /.navbar-collapse -->
								</div><!-- /.container-fluid -->
							</nav>
						</div>
					</div>
				</div> <!-- / .container -->
			</div>

			<!-- Header End -->
