<%#= render 'shared/cartmodal'%>
<!-- Header Start -->
			<div class="header">
				<div class="container">
					<!-- Header top area content -->
					<div class="header-top">
						<div class="row">
							<div class="col-md-4 col-sm-4">
								<!-- Header top left content contact -->
								<div class="header-contact">
									<!-- Contact number -->
									<span><i class="fa fa-phone red"></i> 879-938-57791</span>
								</div>
							</div>
							<div class="col-md-4 col-sm-4">
								<!-- Header top right content search box -->
								<div class=" header-search">
									<form class="form" role="form">
										<div class="input-group">
										  <input type="text" class="form-control" placeholder="Search...">
										  <span class="input-group-btn">
											<button class="btn btn-default" type="button"><i class="fa fa-search"></i></button>
										  </span>
										</div>
									</form>
								</div>
							</div>
							<div class="col-md-4 col-sm-4">
								<!-- Button Kart -->
								<div class="btn-cart-md">
										<!-- Image -->
									<%= link_to(shopping_cart_items_path, class: "cart-link") do %>
										<%= image_tag 'cart.png', :class => "img-responsive",:alt => ""%>
										<!-- Heading -->
										<h4>Shopping Cart</h4>
										<span class="cart-count"><%= session_cart.shopping_cart_items.length%> Items</span>
										<div class="clearfix"></div>
									<%end%>
									<div class="clearfix"></div>
								</div>
								<div class="clearfix"></div>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-md-4 col-sm-5">
							<!-- Link -->
							<a href="index.html">
							<%= link_to root_path do %>
								<!-- Logo area -->
								<div class="logo">
									<%= image_tag 'logo1.jpg', :class => "img-responsive",:alt => ""%>
									<!-- Heading -->
									<h1>TeekhaRassa</h1>
									<!-- Paragraph -->
									<p>Ithe Sagal Bhetel na Bhau!</p>
								</div>
							<% end  %>
							</a>
						</div>
						<div class="col-md-8 col-sm-7">
							<!-- Navigation -->
							<nav class="navbar navbar-default navbar-right" role="navigation">
								<div class="container-fluid">
									<!-- Brand and toggle get grouped for better mobile display -->
									<div class="navbar-header">
										<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
											<span class="sr-only">Toggle navigation</span>
											<span class="icon-bar"></span>
											<span class="icon-bar"></span>
											<span class="icon-bar"></span>
										</button>
									</div>

									<!-- Collect the nav links, forms, and other content for toggling -->
									<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
										<ul class="nav navbar-nav">
											<li>
											<%= link_to (image_tag 'nav-menu/nav1.jpg', :class => "img-responsive img-rounded",:alt => "")+"Home",root_path%>
											</li>

											<li class="dropdown hidden-xs">
												<a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= image_tag 'nav-menu/nav2.jpg', :class => "img-responsive img-rounded",:alt => ""%> Menu <b class="caret"></b></a>

												<ul class="dropdown-menu dropdown-md">
													<li>
														<div class="row">
															<% category_header.each do |category|%>
																<% if category.foods.first%>
																	<div class="col-md-4 col-sm-6">
																		<!-- Menu Item -->
																		<div class="menu-item">
																			<!-- Heading -->
																			<h3><%= category.title%></h3>
																			<!-- Image -->
																			<%= image_tag category.category_image.url, :class => "img-responsive",:alt => ""%>
																			<!-- Paragraph -->
																			<p><%= raw category.description.truncate(150)%></p>
																			<!-- Button -->
																			<%= link_to "View Menu",category_food_path(category),class: 'btn btn-danger btn-xs'%>
																		</div>
																	</div>
																<%end%>
															<%end%>
														</div>
													</li>
												</ul>
											</li>
											<li class="dropdown visible-xs">
												<a href="#" class="dropdown-toggle" data-toggle="dropdown"> Menu <b class="caret"></b></a>
												<ul class="dropdown-menu">
													<li><a href="menu.html">Vegetarian</a></li>
													<li><a href="menu.html">Non Vegetarian</a></li>
													<li><a href="menu.html">Special Menu</a></li>
												</ul>
											</li>
<!-- 																				<%# if current_user%>
									<span><%#= current_user.email%>   <%#= link_to "SignOut", destroy_user_session_path,method: :delete%></span>
									<%#else%>
									<span><%#= link_to "SignIn",new_user_session_path%></span>
									<%#end%> -->

												<%if current_user%>
													<li><%= link_to (image_tag 'nav-menu/signed_user.png' , :class => "img-responsive")+"My Profile" ,  myaccount_overview_path if current_user.present? %></li>
													<li><%= link_to (image_tag 'nav-menu/Logout.png' , :class => "img-responsive")+"SignOut" ,  destroy_user_session_path,method: :delete if current_user.present? %></li>
												<%else%>
													<li><%= link_to (image_tag 'nav-menu/nav3.jpg' , :class => "img-responsive")+"SignIn" ,  new_user_session_path%></li>
												<%end%>
