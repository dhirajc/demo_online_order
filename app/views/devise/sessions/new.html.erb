<div class="container">

<div class="row" style="margin-top:20px">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <fieldset>
        <h2>Please Sign In</h2>
        <hr class="colorgraph">
        <div class="form-group">
          <%= f.email_field :email,class: 
                    'form-control input-lg',placeholder: 'Email Address' %>
        </div>
        <div class="form-group">
          <%= f.password_field :password,class: 
                    'form-control input-lg',placeholder: 'Password' %>
        </div>
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Forgot your password?", new_password_path(resource_name),class: 'btn btn-link pull-right' %><br />
          <% end -%>

        <hr class="colorgraph">
        <div class="row">
          <div class="col-xs-6 col-sm-6 col-md-6">
            <%= f.submit "Log in",class: 'btn btn-lg btn-success btn-block',value: 'Sign In' %>
          </div>
          <div class="col-xs-6 col-sm-6 col-md-6">
            <%= link_to "Sign up", new_registration_path(resource_name),class: 'btn btn-lg btn-primary btn-block' %><br />
          </div>
        </div>
      </fieldset>
    <%end%>
  </div>
</div>

</div>